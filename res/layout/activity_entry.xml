<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true">
    
    <RelativeLayout 
        android:id="@+id/home_item_line_first_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/home_item_desgin_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:background="@color/color_blue"/>
         <ImageView 
             android:id="@+id/home_item_forum_iv"
             android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@color/color_blue"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/home_item_line_first_r2"
        android:layout_width="fill_parent"
        android:layout_below="@id/home_item_line_first_rl"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        
        <ImageView 
            android:id="@+id/home_item_my_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:background="@color/color_blue"/>
         <ImageView 
             android:id="@+id/home_item_setting_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@color/color_blue"/>
    </RelativeLayout>
    
    </RelativeLayout>

</RelativeLayout>
