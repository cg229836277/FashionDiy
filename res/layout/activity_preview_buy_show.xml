<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.chuangmeng.fashiondiy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <com.chuangmeng.fashiondiy.view.viewflow.ViewFlow
                android:id="@+id/design_preview_buy_show_vf"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:sidebuffer="3" />

            <com.chuangmeng.fashiondiy.view.viewflow.CircleFlowIndicator
                android:id="@+id/design_preview_buy_show_cfi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:padding="10dip"
                app:fadeOut="1000"
                app:inactiveType="fill" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/design_preview_buy_code_no_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="码号："
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/text_size_26" />

                <Button
                    android:id="@+id/design_buy_cloth_no_s_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S" />

                <Button
                    android:id="@+id/design_buy_cloth_no_m_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M" />

                <Button
                    android:id="@+id/design_buy_cloth_no_l_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L" />

                <Button
                    android:id="@+id/design_buy_cloth_no_xl_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XL" />

                <Button
                    android:id="@+id/design_buy_cloth_no_xxl_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXL" />

                <Button
                    android:id="@+id/design_buy_cloth_no_xxxl_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXL" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/design_preview_buy_num_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/design_preview_buy_code_no_ll"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量："
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/text_size_26" />

                <Button
                    android:id="@+id/design_buy_cloth_num_sub_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - " />

                <TextView
                    android:id="@+id/design_buy_cloth_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  1 " />

                <Button
                    android:id="@+id/design_buy_cloth_num_add_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" + " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_below="@id/design_preview_buy_num_ll"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="简介："
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/text_size_26" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/design_buy_cloth_money_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="buy"
            android:textColor="@color/color_red_ff0000" />

        <Button
            android:id="@+id/design_buy_cloth_ok_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="buy" />
    </LinearLayout>

</RelativeLayout>