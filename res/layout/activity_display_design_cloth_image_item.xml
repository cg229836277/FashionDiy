<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/display_cloth_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/deal_parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="4dp" >

        <CheckBox
            android:id="@+id/choose_state_checkbox"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/delete_cloth_btn"
            android:layout_width="@dimen/display_cloth_size_64dp"
            android:layout_height="@dimen/display_cloth_size_64dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/design_display_delete_cloth_selected" />
    </RelativeLayout>

</FrameLayout>